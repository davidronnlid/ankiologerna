{
  "compilerOptions": {
    "target": "es6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "rootDir": "src", // Specify the root directory of input files
    "outDir": "dist", // Specify the location where the compiled output (JavaScript files) are placed
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules via creation of namespace objects for all imports
    "strict": true // Enable all strict type-checking options
  },
  "include": ["src/**/*.ts"], // Compiler will include 'ts' files in 'src' and subdirectories
  "exclude": ["node_modules"] // Compiler will exclude 'node_modules' directory
}
